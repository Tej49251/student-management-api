				{
					"name": "2. POST /api/auth/login (ADMIN) & Save Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = JSON.parse(responseBody);",
									"if (jsonData.token) {",
									"    pm.environment.set(\"jwtToken\", jsonData.token);",
									"    pm.environment.set(\"adminId\", jsonData._id);",
									"    pm.test(\"Login successful and JWT saved\", function () {",
									"        pm.expect(pm.environment.get(\"jwtToken\")).to.not.be.empty;",
									"    });",
									"} else {",
									"    pm.test(\"Login failed - No token received\", function() {",
									"        pm.expect(false).to.be.true;",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
